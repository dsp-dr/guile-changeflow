# Guile ChangeFlow Environment Configuration
# Copy to .env and customize for your environment
# NEVER commit .env to version control!

# ============================================
# CLOUDFLARE CONFIGURATION
# ============================================

# Cloudflare Worker Endpoints
CLOUDFLARE_WORKER_URL=https://api.changeflow.us
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Workers Logs Configuration
WORKERS_LOGS_ENABLED=true
WORKERS_LOGS_SAMPLE_RATE=0.1
WORKERS_LOGS_LEVEL=info

# ============================================
# MCP SERVER CONFIGURATION
# ============================================

# MCP Server Settings
MCP_SERVER_PORT=8427
MCP_PROTOCOL_VERSION=2024-11-05
MCP_BASE_URL=${CLOUDFLARE_WORKER_URL}
NODE_ENV=development

# ============================================
# OAUTH CONFIGURATION
# ============================================

# GitHub OAuth App Credentials (for Remote MCP)
GITHUB_CLIENT_ID=your_client_id_here
GITHUB_CLIENT_SECRET=your_client_secret_here

# ============================================
# DATABASE CONFIGURATION
# ============================================

DATABASE_PATH=./data/changeflow.db
DATABASE_SCHEMA=./src/database/schema.sql

# ============================================
# RISK ENGINE SETTINGS
# ============================================

RISK_THRESHOLD_HIGH=80
RISK_THRESHOLD_MEDIUM=50
RISK_THRESHOLD_LOW=20
FREEZE_PERIOD_ENABLED=true

# ============================================
# CAB CONFIGURATION
# ============================================

CAB_APPROVAL_REQUIRED=true
CAB_QUORUM_SIZE=3
CAB_EMERGENCY_BYPASS=false

# ============================================
# DASHBOARD CONFIGURATION
# ============================================

DASHBOARD_PORT=8080
DASHBOARD_UPDATE_INTERVAL=5000
DASHBOARD_API_ENDPOINT=${CLOUDFLARE_WORKER_URL}

# ============================================
# NOTIFICATION SETTINGS
# ============================================

NOTIFY_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFY_EMAIL_ENABLED=false
NOTIFY_SMS_ENABLED=false

# ============================================
# TESTING CONFIGURATION
# ============================================

TEST_MODE=false
TEST_ENDPOINT=http://localhost:8427
DEMO_MODE=true

# ============================================
# DEMO SETTINGS (7 AM PRESENTATION)
# ============================================

DEMO_EXECUTIVE_MODE=true
DEMO_ROI_AMOUNT=4700000
DEMO_SHOW_BATTLE_TESTS=true
DEMO_CLOUDFLARE_ENDPOINT=${CLOUDFLARE_WORKER_URL}

# ============================================
# NPM PUBLISHING CONFIGURATION
# ============================================

# For publishing @guile-changeflow/mcp-server package
NPM_TOKEN=your_npm_token_here
NPM_REGISTRY=https://registry.npmjs.org/
NPM_SCOPE=@guile-changeflow
NPM_PACKAGE_NAME=@guile-changeflow/mcp-server